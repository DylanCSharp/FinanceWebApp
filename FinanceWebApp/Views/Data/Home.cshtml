@{
    ViewData["Title"] = "Home Loan";
}

@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - financeexpert.com</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>
        <div class="container-fluid">
            <div class="card border-0 shadow my-5">
                <div class="card-body p-5">
                    <h1 class="font-weight-light text-center">Adding Home Loan!</h1>
                    <h4 class="font-weight-light text-center">@ViewBag.Error</h4>
                    <hr />
                    <form class="p-3">
                        <div class="form-group">
                            <label for="seeAnotherField">Choose:</label>
                            <select class="form-control" id="seeAnotherField">
                                <option value="no">Buying</option>
                                <option value="yes">Renting</option>
                            </select>
                        </div>
                        <div class="form-group" id="rentingDiv">
                            <label for="otherField">Monthly Rental Amount:</label>
                            <input type="number" name="monthlyrent" class="form-control" id="otherField">
                        </div>
                        <div class="form-group" id="buyingDiv">
                            <label for="purchase">Purchase Amount:</label>
                            <input type="number" class="form-control" id="purchase" name="purchase">
                            <label for="deposit">Deposit Amount:</label>
                            <input type="number" class="form-control" id="deposit" name="deposit">
                            <label for="interest">Interest Rate:</label>
                            <input type="number" class="form-control" id="interest" name="interest">
                            <label for="sel1">Months to Repay (default of 240):</label>
                            <select class="form-control" id="sel1" name="monthsrepay">
                                <option selected="selected" value="240">Select a Value...</option>
                                <option value="240">240</option>
                                <option value="360">360</option>
                            </select>
                        </div>
                        <div class="text-center">
                            <button type="submit" formmethod="post" class="btn btn-secondary btn-lg">Next</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>

}