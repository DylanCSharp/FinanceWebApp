@model IEnumerable<FinanceWebApp.Models.Savings>

@{
    ViewData["Title"] = "Savings Summary";
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <form>
        <div class="container">
            <div class="card border-0 shadow my-5">
                <div class="card-body p-5">
                    <h1 class="font-weight-light text-center">Saving Summary!</h1>
                    <h4 class="font-weight-light text-center">@ViewBag.History</h4>
                    <hr />
                    @foreach (var item in Model)
                    {
                        <div class="table-responsive-xl">
                            <table class="table">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">
                                            Goal Amount:
                                        </th>
                                        <th scope="col">
                                            Years:
                                        </th>
                                        <th scope="col">
                                            Interest Rate:
                                        </th>
                                        <th scope="col">
                                            Monthly Amount to Reach Goal:
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <td>
                                            R @Html.DisplayFor(modelItem => item.SavingAmount)
                                        </td>
                                        <td>

                                            @Html.DisplayFor(modelItem => item.SavingYears) Years
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SavingInterestrate) %
                                        </td>
                                        <td>
                                            R @Html.DisplayFor(modelItem => item.MonthlyAmountTosave)
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </form>
</body>
</html>
